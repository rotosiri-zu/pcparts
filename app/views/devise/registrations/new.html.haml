.container
  .border.p-4
    %h2 新規登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form-group
        = f.label :nickname
        %br/
        = f.text_field :nickname, class: "text-field width",  autofocus: true, autocomplete: "名前", placeholder: "１０文字以内"
      .form-group
        = f.label :email
        %br/
        = f.email_field :email, class: "text-field width", autofocus: true, autocomplete: "email"
      .form-group
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length}桁以上)
        %br/
        = f.password_field :password, class: "text-field width", autocomplete: "new-password"
      .form-group
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, class: "text-field width", autocomplete: "new-password"
      .actions
        = f.submit "新規登録", class: "btn"
        .session
          = render "devise/shared/links"
